javascript:var cUL=0,pUL=0,fSL=0,hostname=location.hostname,uL=0,username="";try{var columnUsername=document.getElementsByClassName("account__header__username")[0].innerHTML;cUL=columnUsername.match(/@/g).length}catch(e){}try{var profileUsername=document.getElementsByClassName("public-account-header__tabs__name")[0].innerHTML;pUL=profileUsername.match(/@/g).length}catch(e){}try{var fullSelection=window.getSelection().toString();fSL=fullSelection.match(/@/g).length}catch(e){}fSL?(username=fullSelection.match(/(@)(\S+)/)[2],uL=fSL):cUL?(username=columnUsername.match(/(@)(\S+)/)[2],uL=cUL):(username=profileUsername.match(/(@)(\S+)/)[2],uL=pUL);try{uL!=1&&ul!=2||(2==uL?window.open("https://example.mastodon.instance/authorize_follow?acct="+encodeURIComponent(username),"_blank","width=600,height=600,toolbar=no"):window.open("https://example.mastodon.instance/authorize_follow?acct="+encodeURIComponent(username+"@"+hostname),"_blank","width=600,height=600,toolbar=no"))}catch(e){}
